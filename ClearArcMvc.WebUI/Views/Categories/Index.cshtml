@model IEnumerable<CleanArchMvc.Application.DTOs.CategoryDTO>
@{
    ViewData["Title"] = "Categories Management";
}

<h2>Categories Management</h2>

<a class="btn btn-primary" href="/Categories/Create">Register New</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => category.Name)</td>
                <td>
                    <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-yellow">Edit</a>
                    <a class="btn btn-blue" href="/Categories/Details/@category.Id">Details</a>
                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-red">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
